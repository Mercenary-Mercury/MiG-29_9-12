 <animation>
  <type>select</type>
  <object-name>ISTR4-2.tankPTB</object-name>
  <condition>
   <and>
    <greater-than>
     <property>mig29/instrumentation/electrical/v27</property>
     <value>18</value>
    </greater-than>
    <or>
     <equals>
      <property>mig29/controls/lighting/kontr_lamp</property>
      <value>1</value>
     </equals>
     <less-than>
      <property>fdm/jsbsim/systems/fuel/csPTB</property>
      <value>2</value>
     </less-than>
    </or>
   </and>
  </condition>
 </animation>

