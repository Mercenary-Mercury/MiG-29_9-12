     </equals>
    </or>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>IP-52.speedbrake</object-name>
  <condition>
   <and>
    <greater-than>
     <property>mig29/instrumentation/electrical/v27</property>
     <value>18</value>
    </greater-than>
    <or>
     <equals>
      <property>mig29/controls/lighting/kontr_lamp</property>
      <value>1</value>
     </equals>
     <greater-than>
      <property>/surface-positions/speedbrake-pos-norm</property>
      <value>0</value>
     </greater-than>
    </or>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>IP-52.slats</object-name>
  <condition>
   <and>
    <greater-than>
     <property>mig29/instrumentation/electrical/v27</property>
     <value>18</value>
    </greater-than>
    <or>
     <equals>
      <property>mig29/controls/lighting/kontr_lamp</property>
      <value>1</value>
     </equals>
     <greater-than>
      <property>fdm/jsbsim/fcs/LERX-pos-norm</property>
      <value>0</value>
     </greater-than>
    </or>
   </and>
  </condition>
 </animation>

